# ==================================================
# NIIT Website .htaccess
# Clean Routing • Performance • Security
# SPA-friendly
# ==================================================

<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /

# --------------------------------------------------
# ENVIRONMENT DETECTION
# --------------------------------------------------
RewriteCond %{HTTP_HOST} ^localhost [NC]
SetEnv NIIT_ENV dev

RewriteCond %{HTTP_HOST} !^localhost [NC]
SetEnv NIIT_ENV prod

# --------------------------------------------------
# FORCE HTTPS + REMOVE WWW (PROD ONLY)
# --------------------------------------------------
RewriteCond %{ENV:NIIT_ENV} =prod
RewriteCond %{HTTPS} !=on [OR]
RewriteCond %{HTTP_HOST} ^www\. [NC]
RewriteCond %{HTTP_HOST} ^(?:www\.)?(.*)$ [NC]
RewriteRule ^ https://%1%{REQUEST_URI} [L,R=301]

# --------------------------------------------------
# BLOCK DIRECT ACCESS TO /pages/ FROM URL BAR
# --------------------------------------------------
RewriteCond %{THE_REQUEST} \s/pages/ [NC]
RewriteRule ^ pages/public/error.php [L]

# --------------------------------------------------
# STATIC ASSETS (NO TOUCH)
# --------------------------------------------------
RewriteCond %{REQUEST_URI} ^/assets/ [NC,OR]
RewriteCond %{REQUEST_URI} \.(css|js|png|jpg|jpeg|gif|webp|svg|ico|woff2?|ttf|eot|mp4)$ [NC]
RewriteRule ^ - [L]

# --------------------------------------------------
# API ROUTES
# --------------------------------------------------
RewriteRule ^api/(.*)$ api/$1 [L,QSA]

# --------------------------------------------------
# HOME ( / AND /index )
# --------------------------------------------------
RewriteRule ^(index)?/?$ pages/public/index.php [L,QSA]

# --------------------------------------------------
# PUBLIC PAGES
# --------------------------------------------------
RewriteRule ^about/?$ pages/public/about.php [L,QSA]
RewriteRule ^courses/?$ pages/public/courses.php [L,QSA]
RewriteRule ^diploma/?$ pages/public/diploma.php [L,QSA]
RewriteRule ^contact/?$ pages/public/contact.php [L,QSA]
RewriteRule ^login/?$ pages/public/login.php [L,QSA]
RewriteRule ^register/?$ pages/public/register.php [L,QSA]

# --------------------------------------------------
# COURSE / DIPLOMA PAGES (FLAT URLS)
# --------------------------------------------------
RewriteRule ^software-engineering/?$ pages/public/courses/software-engineering.php [L,QSA]
RewriteRule ^infrastructure/?$ pages/public/courses/infrastructure.php [L,QSA]
RewriteRule ^multimedia/?$ pages/public/courses/multimedia.php [L,QSA]
RewriteRule ^webdev/?$ pages/public/courses/webdev.php [L,QSA]

# --------------------------------------------------
# SPA FALLBACK (IMPORTANT)
# --------------------------------------------------
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ pages/public/index.php [L,QSA]

</IfModule>

# ==================================================
# SECURITY HEADERS
# ==================================================
<IfModule mod_headers.c>
Header always set X-Frame-Options "SAMEORIGIN"
Header always set X-Content-Type-Options "nosniff"
Header always set Referrer-Policy "strict-origin-when-cross-origin"
Header always set Permissions-Policy "camera=(), microphone=(), geolocation=()"
</IfModule>

# ==================================================
# CACHING
# ==================================================
<IfModule mod_expires.c>
ExpiresActive On
ExpiresByType image/webp "access plus 1 year"
ExpiresByType image/jpeg "access plus 1 year"
ExpiresByType image/png "access plus 1 year"
ExpiresByType image/svg+xml "access plus 1 year"
ExpiresByType text/css "access plus 1 month"
ExpiresByType application/javascript "access plus 1 month"
ExpiresByType application/font-woff2 "access plus 1 year"
</IfModule>

Options -Indexes
