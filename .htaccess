# ==================================================
# NIIT Website .htaccess
# Clean Routing • Performance • Security
# Local + Production Safe
# ==================================================

<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /

# --------------------------------------------------
# ENVIRONMENT DETECTION
# --------------------------------------------------

# Localhost (Laragon / XAMPP)
RewriteCond %{HTTP_HOST} ^localhost [NC]
SetEnv NIIT_ENV dev

# Production
RewriteCond %{HTTP_HOST} !^localhost [NC]
SetEnv NIIT_ENV prod

# --------------------------------------------------
# FORCE HTTPS + REMOVE WWW (PRODUCTION ONLY)
# --------------------------------------------------
RewriteCond %{ENV:NIIT_ENV} =prod
RewriteCond %{HTTPS} !=on [OR]
RewriteCond %{HTTP_HOST} ^www\. [NC]
RewriteCond %{HTTP_HOST} ^(?:www\.)?(.*)$ [NC]
RewriteRule ^ https://%1%{REQUEST_URI} [L,R=301]

# --------------------------------------------------
# PREVENT DIRECT BROWSER ACCESS TO /pages/
# (SAFE: does not break PHP includes)
# --------------------------------------------------
RewriteCond %{THE_REQUEST} \s/pages/ [NC]
RewriteRule ^ pages/public/error.php [L]

# --------------------------------------------------
# STATIC ASSETS (NO REWRITE / NO REDIRECT)
# --------------------------------------------------
RewriteCond %{REQUEST_URI} ^/assets/ [NC,OR]
RewriteCond %{REQUEST_URI} \.(css|js|png|jpg|jpeg|gif|webp|svg|ico|woff2?|ttf|eot|mp4)$ [NC]
RewriteRule ^ - [L]

# --------------------------------------------------
# API ROUTES
# --------------------------------------------------
RewriteCond %{REQUEST_URI} ^/api/ [NC]
RewriteRule ^api/(.*)$ api/$1 [L,QSA]

# --------------------------------------------------
# HOME PAGE
# --------------------------------------------------
RewriteRule ^/?$ pages/public/index.php [L,QSA]

# --------------------------------------------------
# PUBLIC ROUTES
# --------------------------------------------------
RewriteRule ^about/?$ pages/public/about.php [L,QSA]
RewriteRule ^courses/?$ pages/public/courses.php [L,QSA]
RewriteRule ^diploma/?$ pages/public/diploma.php [L,QSA]
RewriteRule ^contact/?$ pages/public/contact.php [L,QSA]
RewriteRule ^login/?$ pages/public/login.php [L,QSA]
RewriteRule ^register/?$ pages/public/register.php [L,QSA]

# --------------------------------------------------
# COURSE SUB-PAGES
# --------------------------------------------------
RewriteRule ^courses/webdev/?$ pages/public/courses/webdev.php [L,QSA]
RewriteRule ^courses/mms/?$ pages/public/courses/mms.php [L,QSA]
RewriteRule ^courses/multimedia/?$ pages/public/courses/multimedia.php [L,QSA]

# --------------------------------------------------
# CATCH-ALL → 404
# --------------------------------------------------
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^.*$ pages/public/error.php [L,QSA]

</IfModule>

# ==================================================
# SECURITY HEADERS
# ==================================================
<IfModule mod_headers.c>
Header always set X-Frame-Options "SAMEORIGIN"
Header always set X-Content-Type-Options "nosniff"
Header always set Referrer-Policy "strict-origin-when-cross-origin"
Header always set Permissions-Policy "camera=(), microphone=(), geolocation=()"
</IfModule>

# ==================================================
# CACHING / PERFORMANCE
# ==================================================
<IfModule mod_expires.c>
ExpiresActive On
ExpiresByType image/webp "access plus 1 year"
ExpiresByType image/jpeg "access plus 1 year"
ExpiresByType image/png "access plus 1 year"
ExpiresByType image/svg+xml "access plus 1 year"
ExpiresByType text/css "access plus 1 month"
ExpiresByType application/javascript "access plus 1 month"
ExpiresByType application/font-woff2 "access plus 1 year"
</IfModule>

# ==================================================
# DIRECTORY LISTING PROTECTION
# ==================================================
Options -Indexes
